<?xml version="1.0"?>
<launch>
	<arg name="robot"/>
	<arg name="name"/>
	<arg name="flip" default="true"/>
	<arg name="sim" default="false"/>

	<include unless="$(arg sim)" file="$(find cob_bringup)/drivers/rc_visard160.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="name" value="$(arg name)"/>
	</include>
	<include file="$(find cob_bringup)/tools/hz_monitor.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="yaml_name" value="$(arg name)"/>
		<arg name="sim" value="$(arg sim)"/>
	</include>
	<include if="$(arg flip)" file="$(find cob_bringup)/drivers/image_flip.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="camera_name" value="$(arg name)"/>
		<arg name="pointcloud_in" value="/$(arg name)/stereo/points2"/>
		<arg name="pointcloud_out" value="/$(arg name)_upright/stereo/points2"/>
		<arg name="colorimage_in" value="/$(arg name)/stereo/left/image_rect_color"/>
		<arg name="colorimage_out" value="/$(arg name)_upright/stereo/left/image_rect_color"/>
	</include>
</launch>
